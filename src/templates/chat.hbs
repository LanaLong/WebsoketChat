<div id="chat-page" style="width: 100vw; height: 100vh">
    <div class="wrapper">

        <div class="side-bar">
            <div class="user-block">
                <img src="./src/img/noImg.png" class="img-circul" id="avatar">
                <div class="user-name">Name</div>
            </div>

            <div class="users">
                <h3>Участники <span>( ... )</span></h3>
                <p class="user-name">User</p>
            </div>

            <div id="profile" class="profile"></div>
            <div class="users">
                <ul class="users-list"></ul>
            </div>
        </div>

        <div class="container">
        <div class="auth-block">
            <div class="auth-block__header">
                <span class="auth-block__label">Авторизация</span>
            </div>

            <div class="auth-block__form">
                <input type="text" class="input-name" placeholder="ФИО">
                <input type="text" class="input-nik" placeholder="Ник">
                <button type="submit" class="auth-button">Войти</button>
            </div>
        </div>

        <!-- Форма загрузки фотографии -->
        <div class="img-load" id="imgLoad">

            <div class="img-load__header">
                <span class="img-load__label">Загрузка фото</span>
            </div>

            <div class="inputfile__form">
                <input type="file" id="inputfile" class="inputfile">
                <label for="inputfile" class="file-label text-center">
                    <div class="label-image glyphicon glyphicon-upload"></div>
                    <div class="label-text">Загрузите или перетащите сюда изображение</div>
                    <img src="" id="drop-zone" data-role="drop-zone">
                </label>
                <input type="button" id="resetButton" value="Отмена">
                <input type="submit" id="sendPhotoButton" value="Загрузить">
            </div>

        </div>
        <!-- /Форма загрузки фотографии -->



        <ul class="list-group" id="messageContainer">
        <span>message</span>
        </ul>
